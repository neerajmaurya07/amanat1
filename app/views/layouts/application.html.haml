!!! 5
%html
%head
  %title Amanat
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "AMANAT", root_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "New Mehman", new_mehman_path, class: "btn btn-default"
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default"
        - else
          %li= link_to "Sign Up", new_user_registration_path, class: "btn btn-default"
          %li= link_to "Sign In", new_user_session_path, class: "btn btn-default"
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert"
    = yield  
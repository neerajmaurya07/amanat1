<h1> Mehman List </h1>

<div class="row">
  <div class="col-sm-12">
	<table class="table table-bordered table-condensed table-striped">
	  <tr class = "info">
	    <th> Code </th>
	    <th> Country </th>
	    <th> Full Name </th>
	    <th> Arrival Date </th>
	    <th> Arrival Info </th>
	    <th> Visa Expiry </th>
	    <th> Departure Date </th>
	    <th> Departure Info </th>
	    <th> Action </th>
	  </tr>
	  <% @mehmen.each do |mehman| %>
	  <tr class = "">
	    <td> <%= mehman.code %> </td>
	    <td> <%= mehman.country %> </td>
	    <td> <%= mehman.full_name %> </td>
	    <td> <%= mehman.arrival_date %> </td>
	    <td> <%= mehman.arrival_info %> </td>
	    <td> <%= mehman.visa_expiry_date %> </td>
	    <td> <%= mehman.departure_date %> </td>
	    <td> <%= mehman.departure_info %> </td>
	    <td> <%= link_to "Edit", edit_mehman_path(mehman) %> </td>
	  </tr>
	  <% end %>
	</table>
  </div>
</div>
          
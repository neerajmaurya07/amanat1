= simple_form_for @visa, html: { multipart: true } do |f|
  - if @visa.errors.any?
    %p
      = @visa.errors.count
      Prevented this visa from saving
    %ul
      - @visa.errors.full_messages.each do |msg|
        %li= msg

  .panel-body.col-md-5
    = f.input :code, input_html: { class: 'form-control' }
    = f.input :submission_date, as: :date_picker
    = f.input :apply_date, as: :date_picker
    
    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Back', root_path, class: 'btn btn-default'
